@using Microsoft.AspNetCore.Identity
@using StoreManagement.Data.Models
@inject SignInManager<AppUser> _SignInManager
@inject UserManager<AppUser> _UserManager



<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        @if (_SignInManager.IsSignedIn(User))
        {
            <li class="nav-item dropdown" style="margin-left:auto;">
                <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle"></i> @_UserManager.GetUserAsync(User).Result.FullName
                </a>
                <ul class="dropdown-menu dropdown-menu-white">
                    <li><a class="dropdown-item" href="#">Profil</a></li>
                    <li><a class="dropdown-item" asp-page="/Admin/Users/Login" asp-page-handler="LogOut">Logout</a></li>
                </ul>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-page="/Index"><i class="bi bi-house"></i> Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-page="/Admin/Users/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-page="/Admin/Users/Register"><i class="bi bi-person-add"></i> Register</a>
            </li>

        }
    </ul>
</div>
