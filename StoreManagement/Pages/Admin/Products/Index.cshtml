@page
@model Admin.Products.IndexModel
@{
}

<div class="container">
    <div class="row mb-4 w-50" style="margin:auto">
        <form>
            <div class="input-group mb-3">
                <input type="search" class="form-control" placeholder="Search By Keyword" asp-for="SearchTerm" />
                <button class="btn btn-info"><i class="bi bi-search"></i></button>

            </div>
        </form>
    </div>
    <div class="card">
        <div class="card-header text-dark" style="font-weight:bold;">
            <i class="bi bi-card-list"></i> List Of Product
            <a class="btn btn-warning" style="float:right;" asp-page="AddOrEdit"><i class="bi bi-plus-circle"></i></a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">@Html.LabelFor(p=>p.ProductList.ElementAt(0).ProductName)</th>
                        <th class="text-center">@Html.LabelFor(p=>p.ProductList.ElementAt(0).ProductPrice)</th>
                        <th class="text-center">@Html.LabelFor(p=>p.ProductList.ElementAt(0).ProductPromotion)</th>
                        <th class="text-center">Category</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var product in Model.ProductList)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.ProductPrice</td>
                            @if (product.ProductPromotion)
                            {
                                <td><i class="bi bi-fire" style="color:firebrick"></i></td>
                            }
                            else
                            {
                                <td></td>
                            }
                            <td>@product.Category.Libelle</td>

                            <td>
                                <div class="btn-group w-75" role="group">
                                    <a class="btn btn-outline-secondary mx-1 p-1" asp-page="Details" asp-route-productId="@product.ProductId"><i class="bi bi-eye"></i></a>
                                    <a class="btn btn-outline-success mx-1 p-1" asp-page="AddOrEdit" asp-route-productId="@product.ProductId"><i class="bi bi-pencil-square"></i></a>
                                    <a class="btn btn-outline-danger mx-1 p-1" asp-page="AddOrEdit" asp-page-handler="Delete" asp-route-productId="@product.ProductId">
                                        <i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-muted">
        </div>
    </div>
</div>
